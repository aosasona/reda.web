---
import Layout from "../../layouts/Layout.astro";

const releases = await Astro.glob("./notes/*.md");

const sortedReleases = releases.sort((a, b) => Number(a?.frontmatter?.meta) - Number(b?.frontmatter?.meta));
---

<Layout>
	<section>
		<h1 class="text-3xl lg:text-4xl font-bold">📝 Release Notes</h1>
		<p class="text-neutral-500 mt-3">Here you can find the release notes for all version of Reda. The release notes are ordered by version number, newest first.</p>
		<div class="grid grid-cols-1 gap-6 mt-6">
			{
				sortedReleases.map((release) => (
					<div class="bg-neutral-900 bg-opacity-50 rounded-lg px-5 py-4">
						<h2 class="text-2xl font-bold mb-2">{release.frontmatter.meta}</h2>
						<div class="text-neutral-500 leading-loose text-sm ml-3 mb-3">
							<release.Content />
						</div>
					</div>
				))
			}
		</div>
	</section>
</Layout>
