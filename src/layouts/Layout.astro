---
import GeneralFooter from "../components/GeneralFooter.astro";
import GeneralNav from "../components/GeneralNav.astro";

export interface Props {
  title?: string;
  description?: string;
  meta_image?: string;
}

let { title, description, meta_image } = Astro.props;

if (!title) title = "Reda — The Way To Own Your Library";
if (!description) description = "Import, share, organise and read your favourite books, articles and documents anytime with Reda.";
if (!meta_image) meta_image = "/meta.jpg";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://usereda.app" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={meta_image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://usereda.app" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={meta_image} />

    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class="antialiased">
    <GeneralNav />
    <main class="mt-[11vh] mb-6">
      <slot />
      <div class="container max-w-5xl 2xl:max-w-7xl mx-auto text-center lg:text-left grid grid-cols-1 lg:grid-cols-2 gap-2 py-5 px-4">
        <div>
          <h3 class="text-xl font-bold">Subscribe to our newsletter</h3>
          <p class="text-sm lg:text-base text-neutral-500 leading-relaxed mt-2">
            Get a summary of new features that we’ve shipped, are about to ship, important updates and other useful information.
          </p>
        </div>

        <div class="space-y-2">
          <div class="flex flex-col lg:flex-row lg:items-center gap-4 self-center">
            <input
              type="email"
              placeholder="Your email address"
              class="w-full bg-neutral-900 bg-opacity-50 border border-neutral-800 placeholder-neutral-600 focus:outline-none rounded-lg px-4 py-3"
            />
            <button class="h-min">Subscribe</button>
          </div>
          <p class="text-left text-xs text-neutral-600 px-1">No spam. Unsubscribe at any time.</p>
        </div>
      </div>
    </main>
    <GeneralFooter />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: "Outfit", "Inter", Arial, Helvetica, system-ui, sans-serif;
    background-color: #000000;
    color: #ffffff;
  }
  footer a {
    color: #6a6a6a;
    font-weight: 400;
    font-size: 0.875rem;
    transition: all 0.1s ease-in-out;
  }
  footer a:hover {
    color: #ffffff;
    text-decoration: underline;
    text-decoration-style: dashed;
  }

  p {
    font-size: 1rem;
    line-height: 1.6rem;
    font-weight: 400;
  }

  button {
    background-color: #ffffff;
    color: #000000;
    font-size: 0.8rem;
    border: none;
    padding: 0.9rem 2rem;
    border-radius: 0.5rem;
    transition: all 0.15s ease-in-out;
  }

  button:hover {
    opacity: 0.8;
  }

  .hidden-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .hidden-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .hidden-scrollbar {
    -webkit-overflow-scrolling: touch;
  }
</style>
